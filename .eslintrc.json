{
  "env": {
    "node": true,
    "es2022": true,
    "jest": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 2022,
    "sourceType": "module"
  },
  "rules": {
    // Error prevention
    "no-unused-vars": [
      "error",
      {
        "argsIgnorePattern": "^_",
        "varsIgnorePattern": "^_",
        "caughtErrorsIgnorePattern": "^_"
      }
    ],
    "no-undef": "error",
    "no-unreachable": "error",
    "no-constant-condition": "warn",
    "no-duplicate-imports": "error",
    "no-self-compare": "error",
    "no-template-curly-in-string": "warn",
    
    // Code quality
    "prefer-const": "error",
    "no-var": "error",
    "object-shorthand": "warn",
    "prefer-arrow-callback": "warn",
    "prefer-template": "warn",
    "prefer-destructuring": [
      "warn",
      {
        "array": false,
        "object": true
      }
    ],
    
    // Style and formatting (handled by Prettier mostly)
    "indent": "off",
    "quotes": [
      "warn",
      "single",
      {
        "avoidEscape": true,
        "allowTemplateLiterals": true
      }
    ],
    "semi": ["error", "always"],
    "comma-trailing": "off",
    "max-len": [
      "warn",
      {
        "code": 120,
        "ignoreUrls": true,
        "ignoreStrings": true,
        "ignoreTemplateLiterals": true
      }
    ],
    
    // Console and debugging
    "no-console": [
      "warn",
      {
        "allow": ["warn", "error", "info"]
      }
    ],
    "no-debugger": "error",
    "no-alert": "error",
    
    // Security
    "no-eval": "error",
    "no-implied-eval": "error",
    "no-new-func": "error",
    "no-script-url": "error",
    
    // Best practices
    "eqeqeq": ["error", "always"],
    "no-magic-numbers": [
      "warn",
      {
        "ignore": [-1, 0, 1, 2, 100, 200, 400, 401, 403, 404, 500],
        "ignoreArrayIndexes": true,
        "ignoreDefaultValues": true
      }
    ],
    "no-throw-literal": "error",
    "prefer-promise-reject-errors": "error",
    
    // Async/await
    "require-await": "warn",
    "no-async-promise-executor": "error",
    "no-await-in-loop": "warn",
    "no-promise-executor-return": "error",
    
    // Node.js specific
    "no-process-exit": "warn",
    "no-path-concat": "error",
    
    // Comments
    "spaced-comment": ["warn", "always"],
    "multiline-comment-style": "off",
    
    // Complexity
    "complexity": ["warn", 15],
    "max-depth": ["warn", 4],
    "max-nested-callbacks": ["warn", 3],
    "max-params": ["warn", 5]
  },
  "overrides": [
    {
      "files": ["test/**/*.js", "**/*.test.js", "**/*.spec.js"],
      "env": {
        "jest": true
      },
      "rules": {
        "no-magic-numbers": "off",
        "max-nested-callbacks": "off",
        "max-lines-per-function": "off"
      }
    },
    {
      "files": ["scripts/**/*.js"],
      "rules": {
        "no-console": "off",
        "no-process-exit": "off"
      }
    },
    {
      "files": ["src/utilities/**/*.js"],
      "rules": {
        "no-console": "off"
      }
    }
  ],
  "globals": {
    "process": "readonly",
    "Buffer": "readonly",
    "__dirname": "readonly",
    "__filename": "readonly",
    "global": "readonly",
    "module": "readonly",
    "require": "readonly",
    "exports": "readonly"
  },
  "ignorePatterns": [
    "node_modules/",
    "dist/",
    "build/",
    "coverage/",
    ".archive/",
    "*.min.js"
  ]
}